{
  "compilerOptions": {
    "outDir": "ts-build",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
